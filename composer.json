{
    "name": "samwilson/commonmark-latex",
    "description": "A CommonMark extension for rendering Markdown to LaTeX.",
    "type": "commonmark-extension",
    "license": "gpl-3.0-or-later",
    "authors": [
        {
            "name": "Sam Wilson",
            "homepage": "https://samwilson.id.au/"
        }
    ],
    "require": {
        "league/commonmark": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4",
        "unleashedtech/php-coding-standard": "^3.1",
        "symfony/process": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Samwilson\\CommonMarkLatex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Samwilson\\CommonMarkLatex\\Test\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
